<Window x:Class="ChampRecommender.Windows.ShowInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChampRecommender.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{x:Null}"
      Title="ShowInformation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Path=GameWindowHeight}"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="660"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Path=GameWindowWidth}"/>
            <ColumnDefinition Width="1270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>        
    </Grid>
</Window>
